<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OderActivity">

    <TextView
        android:id="@+id/yourOder"
        android:text="Your oder:"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/oderTextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/yourOder"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </TextView>

    <Button
        android:text="confirm order by email"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="240dp"
        android:onClick="submitOder"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </Button>

    Button
        android:textSize="24sp"
        android:text="SMS confirmation"
        android:onClick="smsOder"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


</RelativeLayout>